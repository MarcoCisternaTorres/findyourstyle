<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegistroTiendaActivity"
    android:background="@drawable/degradado2"

 >

    <TextView
        android:id="@+id/txtView_registrarseTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_x="0dp"
        android:layout_y="15dp"
        android:paddingLeft="160dp"
        android:text="Registro"
        android:textColor="@color/logo_background"
        android:textSize="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVolverAtrasRegistro"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_x="11dp"
        android:layout_y="24dp"
        android:background="@drawable/back"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_flecha_atras" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




    <EditText
        android:id="@+id/etxtNombreTiendaRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="150dp"
        android:layout_x="97dp"
        android:layout_y="107dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:backgroundTint="@color/blancoTrasparente"
        android:ems="10"
        android:hint="Nombre Tienda"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtDireccionTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="25dp"
        android:layout_x="97dp"
        android:layout_y="181dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:backgroundTint="@color/blancoTrasparente"
        android:ems="10"
        android:hint="Direccion de la Tienda" />

    <EditText
        android:id="@+id/etxtContrasenia2RegistroTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="25dp"
        android:layout_x="93dp"
        android:layout_y="415dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:backgroundTint="@color/blancoTrasparente"
        android:ems="10"
        android:hint="Confirmar Contraseña"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtContraseniaRegistro" />

    <EditText
        android:id="@+id/etxtContraseniaRegistroTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="25dp"
        android:layout_x="95dp"
        android:layout_y="336dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:backgroundTint="@color/blancoTrasparente"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtCorreoRegistro" />

    <EditText
        android:id="@+id/etxtCorreoRegistroTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="20dp"
        android:layout_x="94dp"
        android:layout_y="257dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:backgroundTint="@color/blancoTrasparente"
        android:ems="10"
        android:hint="Correo electronico"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxApellidoUsuarioRegistro" />

            <Button
                android:id="@+id/btnRegistrarTienda"
                android:layout_width="220dp"
                android:layout_height="57dp"
                android:layout_marginStart="84dp"
                android:layout_marginTop="25dp"
                android:layout_x="92dp"
                android:layout_y="989dp"
                android:background="@drawable/estilo_borde_edit_text"
                android:text="Registrarse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etxtContrasenia2Registro" />

            <Spinner
        android:id="@+id/spinnerCetgoriaTienda"
        android:layout_width="207dp"
        android:layout_height="45dp"
        android:layout_x="96dp"
        android:layout_y="498dp"
        android:backgroundTint="@color/colorNegro"

        />

    <Spinner
        android:id="@+id/spinnerCiudadTienda"
        android:layout_width="206dp"
        android:layout_height="45dp"
        android:layout_x="93dp"
        android:layout_y="581dp" />

            <TextView
        android:id="@+id/textView2"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_x="7dp"
        android:layout_y="494dp"
        android:text="Tipo de Tienda"
        android:textColor="@color/logo_background" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:layout_x="98dp"
                android:layout_y="684dp"
                android:background="@drawable/estilo_frame_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.435"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerCiudadUsuario">

                <ImageView
                    android:id="@+id/imgAgregarPerfilTienda"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

                <ImageView
                    android:id="@+id/imgAgregarImagenPerfilTienda"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="155dp"
                    android:layout_marginTop="155dp"
                    android:src="@mipmap/camara_amarilla_icon" />
            </FrameLayout>

            <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="626dp"
        android:text="Ciudad"
        android:textColor="@color/logo_background" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="99dp"
                android:layout_y="931dp"
                android:text="Terminos y condiciones de uso" />
        </AbsoluteLayout>
    </ScrollView>
</AbsoluteLayout>