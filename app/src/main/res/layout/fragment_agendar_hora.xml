<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AgendarHoraFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/text_agendar_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="100dp"
        android:text="Agendar Hora"
        android:textColor="@color/colorNegro"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/fechaAtras_agendarHora"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:src="@mipmap/icon_flecha_atras"/>

    <ImageView
        android:id="@+id/notificacion_agendarHora"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="360dp"
        android:src="@mipmap/notificacion_icon"
        />

    <ImageView
        android:id="@+id/imgAgendarHora"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/txtNombreProducto_agendarHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="200dp"
        android:text="Nombre Producto"
        android:textSize="17dp"/>
    <TextView
        android:id="@+id/txtTienda_agendarHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="200dp"
        android:text="Nombre Tienda"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtDireccion_agendarHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="200dp"
        android:text="DirecciÃ³n"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtPrecio_agendarHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp"
        android:text="$ Precio"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="120dp"
        android:text="Horas disponibles"
        android:textSize="20dp"
        android:textColor="@color/colorNegro"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAgendarHora"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="360dp"/>
</FrameLayout>