<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.BuscarFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/fechaAtras_fragmentBuscar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:src="@mipmap/icon_flecha_atras"/>

    <ImageView
        android:id="@+id/notificacion_fragmentBuscar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="360dp"
        android:src="@mipmap/notificacion_icon"
        />


    <TextView
        android:id="@+id/text_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="150dp"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/txt_buscar"
        android:textColor="@color/colorNegro"/>

    <EditText
        android:id="@+id/edBuscar"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:ems="10"
        android:background="@drawable/estilo_borde_edit_text"
        android:inputType="textPersonName"
        android:hint="@string/editTextBuscar" />

    <ImageView
        android:id="@+id/imgIconbuscar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="270dp"
        android:src="@mipmap/icono_buscar" />

    <ImageView
        android:id="@+id/imgIconFiltrar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="340dp"
        android:src="@mipmap/ic_filter" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_buscar"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_marginTop="120dp" />


</FrameLayout>