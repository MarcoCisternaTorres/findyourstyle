<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado2">

    <ImageView
        android:id="@+id/iconSalir_fragmentInicio"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_x="18dp"
        android:layout_y="29dp"
        android:background="@drawable/back" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:layout_x="306dp"
        android:layout_y="258dp"
        android:background="@drawable/agregarimg"/>

    <ImageView
        android:id="@+id/notificacion_fragmentInicio"
        android:layout_width="37dp"
        android:layout_height="30dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="25dp"
        android:layout_x="349dp"
        android:layout_y="29dp"
        android:src="@mipmap/notificacion_icon" />

    <TextView
        android:id="@+id/txtView_ProductosTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_x="74dp"
        android:layout_y="23dp"

        android:text="Agregar Productos"
        android:textColor="@color/logo_background"
        android:textSize="30dp"></TextView>


    <EditText
        android:id="@+id/etxtNombreProducto"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="150dp"
        android:layout_x="44dp"
        android:layout_y="113dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:backgroundTint="@color/blancoTrasparente"
        android:ems="10"
        android:hint="Nombre Producto"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etxtCategorioa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="25dp"
        android:layout_x="60dp"
        android:layout_y="268dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:backgroundTint="@color/blancoTrasparente"
        android:ems="10"
        android:hint="Categoria"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtContraseniaRegistro" />

    <EditText
        android:id="@+id/txtPrecioProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="25dp"
        android:layout_x="55dp"
        android:layout_y="191dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:backgroundTint="@color/blancoTrasparente"
        android:ems="10"
        android:hint="Precio producto" />

    <FrameLayout
        android:id="@+id/containerIMGProductos"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="60dp"
        android:layout_x="-2dp"
        android:layout_y="349dp">

    </FrameLayout>
    <Button
        android:id="@+id/AgregarProductos"
        android:layout_width="220dp"
        android:layout_height="57dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="25dp"
        android:layout_x="92dp"
        android:layout_y="581dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:text="Agregar Producto" />

</AbsoluteLayout>
