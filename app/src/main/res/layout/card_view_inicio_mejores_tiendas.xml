<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/blancoTrasparente"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp">

        <ImageView
            android:id="@+id/img_card_view_tiendas_recomendadas"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/txt_nt_tiendas_recomendadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_card_view_tiendas_recomendadas"
            android:text="Nombre tienda"
            android:textColor="@color/colorNegro"
            />

        <TextView
            android:id="@+id/txt_puntos_tiendas_recomendadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nt_tiendas_recomendadas"
            android:text="Puntos"/>

        <TextView
            android:id="@+id/txt_estrellas_tiendas_recomendadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_puntos_tiendas_recomendadas"
            android:text="Estellas"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>