<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AgregarProductoFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtMisPrductosagrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:text="Agregar Productos"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/fechaAtras_agendarHora2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="32dp"
        android:src="@mipmap/icon_flecha_atras" />



    <EditText
        android:id="@+id/etxtNuevoProducto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/estilo_borde_edit_text"
        android:layout_gravity="center"
        android:layout_marginTop="-200dp"
        android:hint="Nombre Producto"
        />
    <EditText
        android:id="@+id/etxtPrecioNuevoProducto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/estilo_borde_edit_text"
        android:layout_gravity="center"
        android:layout_marginTop="-110dp"
        android:hint="Precio Producto"
        android:ems="10"
        android:inputType="number"
        />



    <Spinner
        android:id="@+id/spNuevoProducto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"/>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/estilo_frame_camera"
        android:layout_gravity="center"
        android:layout_marginTop="150dp">

        <ImageView
            android:id="@+id/imgNuevoProducto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />

        <ImageView
            android:id="@+id/btnAgregarNuevoProducto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="155dp"
            android:src="@mipmap/camara_amarilla_icon" />
    </FrameLayout>

    <Button
        android:id="@+id/btnRegistroNuevoProducto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/estilo_borde_edit_text"
        android:layout_gravity="center"
        android:layout_marginTop="330dp"
        android:text="Agregar producto"
        />
    <TextView
        android:id="@+id/ola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtIdCorreoTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="100dp"/>

</FrameLayout>