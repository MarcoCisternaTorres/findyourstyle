<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EditarYEliminarProductos">

    <EditText
        android:id="@+id/etxtEditarProducto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-250dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:hint="Nombre Producto" />

    <EditText
        android:id="@+id/etxtEditarPrecioProducto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-180dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:hint="Precio Produto" />

    <Spinner
        android:id="@+id/spEditarProducto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-110dp"
    />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/estilo_frame_camera">

        <ImageView
            android:id="@+id/imgEditarP"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/imgEditarProducto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="155dp"
            android:src="@mipmap/camara_amarilla_icon" />

    </FrameLayout>

    <Button
        android:id="@+id/btnUpdateProducto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:text="Editar Producto" />

    <TextView
        android:id="@+id/txtIdCorreoTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="100dp"/>

    <Button
        android:id="@+id/btnDeleteProducto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="270dp"
        android:background="@drawable/estilo_borde_edit_text"
        android:text="Eliminar Producto"></Button>

</FrameLayout>