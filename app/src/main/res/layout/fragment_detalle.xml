<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorFragmentDetalleProductosTienda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DetalleFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="100dp"
        android:text="Detalle producto"
        android:textColor="@color/colorNegro"
        android:textSize="30dp" />

    <ImageView
    android:id="@+id/imgDetalle"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginTop="90dp"
    android:layout_marginLeft="20dp"
    android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/txtNombreProductoDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="200dp"
        android:text="Nombre Producto"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtPrecioDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="200dp"
        android:text="$ Precio"
        android:textSize="17dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/time"
        android:layout_gravity="center"
        android:layout_marginTop="-150dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pencil"
        android:layout_gravity="center"
        android:layout_marginTop="-150dp"
        android:layout_marginLeft="80dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"

        android:text="Horas "
        android:textSize="20dp"
        android:textColor="@color/colorNegro"/>
</FrameLayout>