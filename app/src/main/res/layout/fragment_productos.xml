<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Productos"
    android:background="@drawable/degradado2">

    <ImageView
        android:id="@+id/iconSalir_fragmentInicio"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_x="15dp"
        android:layout_y="21dp"
        android:background="@drawable/back" />

    <ImageView
        android:id="@+id/notificacion_fragmentInicio"
        android:layout_width="37dp"
        android:layout_height="30dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="25dp"
        android:layout_x="349dp"
        android:layout_y="29dp"
        android:src="@mipmap/notificacion_icon" />

    <TextView
        android:id="@+id/txtView_ProductosTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_x="2dp"
        android:layout_y="28dp"
        android:paddingLeft="150dp"
        android:text="Productos"
        android:textColor="@color/logo_background"
        android:textSize="30dp"></TextView>

    <FrameLayout
        android:id="@+id/containerProductos"
        android:layout_width="match_parent"
        android:layout_height="502dp"
        android:layout_marginBottom="60dp"
        android:layout_x="-2dp"
        android:layout_y="138dp">

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageButton

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="346dp"
        android:layout_y="78dp"
        android:background="@drawable/add"></androidx.appcompat.widget.AppCompatImageButton>

</AbsoluteLayout>